<script type="text/javascript">

    $('#date').datepicker({
      viewMode: "months", 
      minViewMode: "months",
      orientation: "top auto"
    });

    function onSaveClick() {
      submitAction('save');
    }

    function submitAction(value) {

    $('#action').val(value);
    $('#submitButton').click();   
    }

